<view class="binding">
  <view class="title">绑定PC账号</view>
  <view class="input-wrapper">
    <input placeholder="账号" type="text" bindinput="watchAccount" value="{{account}}" />
    <input placeholder="密码" type="password" bindinput="watchPassword" value="{{password}}" />
  </view>
  <t-button text="绑定" type="change" size="mini" bindtap="submit"></t-button>
  <view class="tips">绑定PC账号，立即同步数据</view>
  <image class="bg" src="../../images/tomato-bg.png"></image>
</view>