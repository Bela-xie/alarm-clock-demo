.home-wrapper {
  height: 100vh;
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  position: relative;
}

.tomato-wrapper {
  flex: 1;
  margin-top: 66rpx;
  padding: 0 28rpx;
}

.tomato-wrapper>.tomato {
  background: #eef7f6;
  border-radius: 8rpx;
  height: 473rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  box-shadow: 0 2rpx 8rpx 0 rgba(0, 0, 0, 0.1);
}

.createButton {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 580rpx;
}

.todoList {
  padding: 13rpx 30rpx;
  color: #333;
  font-size: 28rpx;
  box-sizing: border-box;
  max-height: 552rpx;
  min-height: 552rpx;
}

.todoList .item {
  display: flex;
  align-items: center;
  background: #fff;
  box-shadow: 0rpx 2rpx 6rpx 0rpx rgba(0, 0, 0, 0.10);
  border-radius: 8rpx;
  padding: 17rpx 50rpx;
  margin-bottom: 24rpx;
}

.todoList .item:last-child {
  margin: 0;
}

.todoList .item text {
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.todoList .item .select {
  border-radius: 50%;
  width: 28rpx;
  height: 28rpx;
  border: 4rpx solid #fe996f;
  margin-right: 30rpx;
  position: relative;
}

.todoList .item .select.active::before {
  content: "";
  position: absolute;
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background: #fe996f;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}