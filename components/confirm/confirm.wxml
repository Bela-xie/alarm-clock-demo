<view class="container" wx:if="{{visible}}">
  <view class="confirm">
    <textarea placeholder="{{placeholder}}" class="textarea" bindinput="watchValue"></textarea>
    <view class="actions">
      <view class="confirm-btn sure" bindtap="confirm">确定</view>
      <view class="confirm-btn cancel" bindtap="cancel">取消</view>
    </view>
  </view>
</view>